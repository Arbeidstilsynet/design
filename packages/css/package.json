{
  "name": "@arbeidstilsynet/design-css",
  "version": "0.5.0",
  "description": "CSS for Designsystemet",
  "author": "Arbeidstilsynet",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Arbeidstilsynet/design.git"
  },
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "exports": {
    ".": {
      "types": "./types.d.ts",
      "default": "./dist/src/index.css"
    },
    "./digdir/*": "./dist/digdir/*",
    "./*": "./dist/src/*"
  },
  "files": [
    "./types.d.ts",
    "dist"
  ],
  "scripts": {
    "dev": "postcss ./src/*.css --base . --dir ./dist --watch",
    "build": "del-cli ./dist && postcss ./src/*.css --base . --dir ./dist && pnpx tsx ./scripts/copy-digdir-css.ts"
  },
  "dependencies": {
    "@digdir/designsystemet-css": "1.9.0"
  },
  "devDependencies": {
    "@types/node": "24.10.9",
    "autoprefixer": "10.4.23",
    "cssnano": "7.1.2",
    "del-cli": "7.0.0",
    "postcss": "8.5.6",
    "postcss-cli": "11.0.1",
    "postcss-import": "16.1.1",
    "postcss-nesting": "13.0.2"
  }
}
