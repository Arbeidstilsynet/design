{
  "name": "root",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md,css,scss}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md,css,scss}\"",
    "typecheck": "pnpm --filter @arbeidstilsynet/* typecheck",
    "lint": "pnpm --filter @arbeidstilsynet/* lint",
    "build:tokens": "pnpm designsystemet tokens build --clean -o ./packages/theme/brand",
    "build": "pnpm --filter @arbeidstilsynet/* build",
    "build:react": "pnpm --filter @arbeidstilsynet/design-react build",
    "release": "pnpm build && changeset publish"
  },
  "packageManager": "pnpm@10.10.0",
  "devDependencies": {
    "@changesets/cli": "2.29.3",
    "@digdir/designsystemet": "1.0.5",
    "@svitejs/changesets-changelog-github-compact": "1.2.0",
    "prettier": "3.5.3"
  }
}
