{
  "name": "root",
  "private": true,
  "type": "module",
  "scripts": {
    "build:tokens": "pnpm designsystemet tokens build --clean -o ./packages/theme/brand",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md,css,scss}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md,css,scss}\"",
    "typecheck": "pnpm -r typecheck",
    "lint": "pnpm -r lint",
    "test": "vitest run",
    "build": "pnpm -r build",
    "build:react": "pnpm --filter @arbeidstilsynet/design-react build",
    "build:storybook": "pnpm --filter storybook... build",
    "version": "changeset version && tsx scripts/add-changelog-date.ts",
    "release": "pnpm build && changeset publish",
    "storybook": "pnpm --filter storybook dev",
    "storybook:serve": "pnpm --filter storybook serve"
  },
  "packageManager": "pnpm@10.10.0",
  "devDependencies": {
    "@changesets/cli": "2.29.4",
    "@digdir/designsystemet": "1.0.6",
    "@svitejs/changesets-changelog-github-compact": "1.2.0",
    "@types/node": "22.15.19",
    "@vitest/coverage-v8": "3.1.3",
    "prettier": "3.5.3",
    "tsx": "4.19.4",
    "typescript": "5.8.3",
    "vitest": "3.1.3"
  }
}
